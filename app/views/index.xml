<Alloy>
	<NavigationWindow module="controls">
		<Window>
			<TableView id='table' dataCollection='films' onClick='rowClick'>
				<TableViewRow>
					<Label class='rowText' id="title">{title}</Label>
				</TableViewRow>
				<FooterView platform='ios' id='onlyUsedToHideEmptyRowsOnIOS' >
					<View height=0 />
				</FooterView>
			</TableView>
		</Window>
	</NavigationWindow>
</Alloy>